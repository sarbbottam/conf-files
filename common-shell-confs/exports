# Update PATH
#   for mysql
PATH=$PATH:/usr/local/mysql/bin
#   for phantomjs
PATH=$PATH:/usr/local/phantomjs/bin
#   for mongodb
PATH=$PATH:/usr/local/mongodb/bin
#   for mojito
PATH=$PATH:/usr/local/node_modules/mojito/bin/
export PATH

# Node
export NODE_PATH='/usr/local/lib/node_modules'

# Git
export GIT_EDITOR=vim

# SVN
export SVN_EDITOR=vim

# Customize ls color
export CLICOLOR=1
# a = black
# b = red
# c = green
# d = brown
# e = blue
# f = magenta
# g = cyan
# h = grey
# A = dark grey
# B = bold red
# C = bold green
# D = yellow
# E = bold blue
# F = magenta
# G = cyan
# H = white
# x = default
# dir symlink sock pipe exe block char exe/w/setuid exe/w/setguid dir/w/s/bit dir/wo/s/bit
export LSCOLORS="fxbxcxdxcxegedabagfgfh"

# Tell grep to highlight matches
export GREP_OPTIONS='--color=auto'

# Only for Linux
if [[ $OSTYPE == "linux-gnu" ]]; then
  # Git
  source ~/.common-shell-confs/ssh-auth-sock
  export_ssh_auth_sock
fi

#Maven
export M2_HOME=/usr/local/apache-maven/apache-maven-3.2.5
export M2=$M2_HOME/bin
export PATH=$M2:$PATH

#Java
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_25.jdk/Contents/Home/
export JAVA=$JAVA_HOME/bin
export PATH=$JAVA:$PATH
