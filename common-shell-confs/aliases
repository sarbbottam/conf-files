# Aliases
alias ll='ls -lrt'
alias lh='ls -lh'
alias op='open'
alias so='source'

alias ebp='vi ~/.bash_profile'
alias ebr='vi ~/.bashrc'
alias sbp='so ~/.bash_profile'
alias sbr='so ~/.bashrc'

alias ezp='vi ~/.zprofile'
alias ezr='vi ~/.zshrc'
alias szp='so ~/.zprofile'
alias szr='so ~/.zshrc'

alias tree='find . -print | sed -e '\''s;[^/]*/;|____;g;s;____|; |;g'\'''
alias rd='/Applications/Google\ Chrome\ Canary.app/Contents/MacOS/Google\ Chrome\ Canary --remote-debugging-port=9222'
alias dtcss='vi ~/Library/Application\ Support/Google/Chrome/Default/User\ StyleSheets/Custom.css'
alias rmds='find . -name "*.DS_Store" -type f -delete'
alias simulator='open /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app'
alias apache='sudo apachectl'
alias watch='compass watch'
alias ip='ifconfig | grep broadcast | grep inet | cut -d" " -f2'

alias qtp='open -a "quicktime player"'
alias vlc='open -a vlc'
alias ..='cd ..'
alias .-='cd -'

alias syncpages='git checkout gh-pages; git rebase master; git checkout master'

alias zip_assets='rm -rf scss package.json config.rb README.md Gruntfile.js pages/ assets/scss/; zip -r Archive *'

alias npmui='npm-check-updates -u && sudo npm install'

alias nodeh='node --harmony --use-strict'

alias startssh='eval `ssh-agent` && ssh-add ~/.ssh/id_rsa'

alias syncprotostart='launchctl load /Users/sarbbo/GitHub/conf-files/remote-sync/prototypes.plist'
alias syncprotostop='launchctl unload /Users/sarbbo/GitHub/conf-files/remote-sync/prototypes.plist'

alias syncuserstudystart='launchctl load /Users/sarbbo/GitHub/conf-files/remote-sync/userstudy.plist'
alias syncuserstudystop='launchctl unload /Users/sarbbo/GitHub/conf-files/remote-sync/userstudy.plist'

alias syncnodejsstart='launchctl load /Users/sarbbo/GitHub/conf-files/remote-sync/nodejs.plist'
alias syncnodejsstop='launchctl unload /Users/sarbbo/GitHub/conf-files/remote-sync/nodejs.plist'

alias syncwebservicestart='launchctl load /Users/sarbbo/GitHub/conf-files/remote-sync/webservice.plist'
alias syncwebservicestop='launchctl unload /Users/sarbbo/GitHub/conf-files/remote-sync/webservice.plist'

alias tunnelstart='ssh -L 8022:localhost:8006 decentrecent.corp.ne1.yahoo.com'

alias setdocker='source ~/.docker'
