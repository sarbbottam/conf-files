# Functions #
function home() {
  ip=`ifconfig | grep broadcast | grep inet | cut -d" " -f2`
  if [ -z "$ip" ]
    then
      host=`hostname`.local;
    else
      host=$ip
  fi
  op -a "/Applications/Google Chrome.app" http://$host/~$USER;
}

function git-branch() {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\(\1\)/'
}

function combo-start() {
  pid=`ps -ef | grep combo | grep -v grep | cut -d" " -f2`
  if [ ! -z $pid ]; then
    echo "combo server is already running with process id $pid"
  else
    (nohup node ~/GitHub/combo-server/combo-server.js >/dev/null 2>&1 &)
    echo "combo server started"
  fi
}

function combo-stop() {
  pid=`ps -ef | grep combo | grep -v grep | cut -d" " -f2`
  if [ ! -z $pid ]; then
    kill -9 $pid >/dev/null 2>&1
    echo "combo server stopped"
  else
    echo "combo server is not running"
  fi
}

function combo() {
  operation=$1;
  if [ ! -z $operation ] && [ $operation = start ]; then
    combo-start
  elif [ ! -z $operation ] && [ $operation = stop ]; then
    combo-stop
  else
    echo "invalid option"
    echo "usage:"
    echo "combo start|stop"
  fi
}

function web-start() {
  pid=`ps -ef | grep web | grep -v grep | cut -d" " -f2`
  if [ ! -z $pid ]; then
    echo "web server is already running with process id $pid"
  else
    (nohup node ~/GitHub/web-server/web-server.js >/dev/null 2>&1 &)
    echo "web server started"
  fi
}

function web-stop() {
  pid=`ps -ef | grep web | grep -v grep | cut -d" " -f2`
  if [ ! -z $pid ]; then
    kill -9 $pid >/dev/null 2>&1
    echo "web server stopped"
  else
    echo "web server is not running"
  fi
}

function web() {
  operation=$1;
  if [ ! -z $operation ] && [ $operation = start ]; then
    web-start
  elif [ ! -z $operation ] && [ $operation = stop ]; then
    web-stop
  else
    echo "invalid option"
    echo "usage:"
    echo "web start|stop"
  fi
}

