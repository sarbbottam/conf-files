  PS1="[$0] %{$fg[cyan]%}%n%{$reset_color%}%{$fg[white]%}@%m:%{$fg[green]%}%1~ %{$fg[magenta]%}$(git-branch)%{$reset_color%} %{$fg[green]%}ÂêΩ%{$reset_color%} "
}
