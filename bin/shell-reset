#!/bin/sh

dots=('dot-files' 'dot-commons' 'bashrc' 'bash_profile' 'zshrc' 'zprofile' 'zhistory' 'gitconfig' 'gitignore_global' 'vimrc' 'dot-common');

# remove symlinks
for dot in "${dots[@]}"
do
  if [ -d ~/.$dot -o -f ~/.$dot -o -L ~/.$dot ]; then
    echo "removing symlink ~/.$dot"
    rm -rf ~/.$dot
    if [ $? == 0 ]; then
      echo "command executed: rm -rf ~/.$dot"
      echo "removed symlink ~/.$dot"
      echo
    fi
  fi
done

# create dots from backup, if any
for dot in "${dots[@]}"
do
  if [ -f ~/$dot -o -d ~/$dot -o -L ~/$dot ]; then
    dotBackup=$dot-backup;
    echo "renaming the previous conf file ~/$dotBackup to ~/$dot"
    mv ~/$dotBackup ~/$dot
    echo "command executed: mv ~/$dotBackup ~/$dot"
    echo "renamed the previous conf file ~/$dotBackup to ~/$dot"
    echo
  fi
done
