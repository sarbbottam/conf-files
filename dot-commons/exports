# Update PATH
#   for mysql
PATH=$PATH:/usr/local/mysql/bin
#   for mongodb
PATH=$PATH:/usr/local/mongodb/bin
# for heroku
PATH=$PATH:/usr/local/heroku/bin:

# Node
export NODE_PATH='/usr/local/lib/node_modules'

# Git
export GIT_EDITOR=vim

# SVN
export SVN_EDITOR=vim

# Customize ls color
export CLICOLOR=1
# a = black
# b = red
# c = green
# d = brown
# e = blue
# f = magenta
# g = cyan
# h = grey
# A = dark grey
# B = bold red
# C = bold green
# D = yellow
# E = bold blue
# F = magenta
# G = cyan
# H = white
# x = default
# dir symlink sock pipe exe block char exe/w/setuid exe/w/setguid dir/w/s/bit dir/wo/s/bit
export LSCOLORS="fxbxcxdxcxegedabagfgfh"

# Tell grep to highlight matches
export GREP_OPTIONS='--color=auto'

# Only for Linux
if [[ $OSTYPE == "linux-gnu" ]]; then
  # ssh
  source ~/.common-shell-confs/ssh-auth-sock
  export_ssh_auth_sock
fi

# Jmeter
export JMETER_HOME=/usr/local/lib/apache-jmeter
export JMETER=$JMETER_HOME/bin
PATH=$PATH:$JMETER

# Maven
export M2_HOME=/usr/local/lib/apache-maven
export M2=$M2_HOME/bin
PATH=$PATH:$M2

# Java
export JAVA_HOME=$(/usr/libexec/java_home)
export JAVA=$JAVA_HOME/bin
PATH=$PATH:$JAVA

# ADB
export ADB='/Applications/Android Studio.app/sdk/platform-tools'
PATH=$ADB:$PATH

# ./node_modules/.bin
export LOCAL_NODE_BINARIES='./node_modules/.bin'
PATH=$PATH:$LOCAL_NODE_BINARIES:

export PATH
