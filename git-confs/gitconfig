[user]
	name = Sarbbottam Bandyopadhyay
	email = sarbbottam@gmail.com
[color]
	ui = auto
[core]
	autocrlf = input
	excludesfile = ~/.gitignore_global
[push]
	default = matching
[alias]
  br = branch

  co = checkout

  st = status
  df = diff
  all = add --all
  ci = commit

  unstage = reset HEAD --

  last = log -1 HEAD
  lo = log --oneline --graph --all --decorate

  pl = pull
  ps = push

  addup = remote add upstream
  fetchup = fetch upstream
  syncup = merge upstream/master
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
